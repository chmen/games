<p id="notice"><%= notice %></p>

<h1>Production Tracking</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Graphic designer</th>
      <th>Illustrator</th>
      <th>Writer</th>
      <th>Composer</th>
      <th>Developer</th>
      <th>Live</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr class="active">
        <td><%= game.name %></td>
        <td><%= game.employee_name(game.id, 1)%></td>
        <td><%= game.employee_name(game.id, 2)%></td>
        <td><%= game.employee_name(game.id, 3)%></td>
        <td><%= game.employee_name(game.id, 4)%></td>
        <td><%= game.employee_name(game.id, 5)%></td>
        <td><%= game.live %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Game', new_game_path, class: 'btn btn-primary' %>
<%= link_to 'Add Employee', new_employee_path, class: 'btn btn-primary' %>
