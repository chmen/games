<%= form_for :assignment do |f| %>

  <div class="field">
    <%= f.label :game_id %><br>
    <%= f.collection_select(:game_id, Game.all, :id, :name)  %>
  </div>
  <div class="field">
    <%= f.label :employee_id %><br>
    <%= f.collection_select(:employee_id, Employee.all, :id, :name)  %>
  </div>
  <div class="field">
    <%= f.label :role %><br>
    <%= f.text_field :role %>
  </div>
  <div class="actions">
    <%= f.submit 'Assign', class: 'btn btn-primary'%>
  </div>
<% end %>
